{
  "_comment": [
    "------------------------------------------------------------",
    "  File: manifest.json",
    "  Path: public/manifest.json",
    "  Description:",
    "    PWA manifest for MyTube.",
    "    Enables:",
    "      - Standalone PWA mode",
    "      - iOS home-screen installation",
    "      - Correct GitHub Pages base path",
    "      - YouTube iframe permissions",
    "      - Background playback support",
    "      - App identity (name, icons, theme)",
    "------------------------------------------------------------"
  ],

  "name": "MyTube",
  "short_name": "MyTube",
  "description": "A fast, lightweight YouTube PWA with background play.",

  "start_url": "/MyTube-Piped-Frontend/",
  "scope": "/MyTube-Piped-Frontend/",
  "display": "standalone",
  "orientation": "portrait",

  "background_color": "#000000",
  "theme_color": "#000000",

  "icons": [
    {
      "src": "/MyTube-Piped-Frontend/favicon.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/MyTube-Piped-Frontend/favicon.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],

  "permissions": {
    "iframe": {
      "allowed": [
        "https://www.youtube.com",
        "https://www.youtube-nocookie.com"
      ]
    }
  },

  "categories": ["entertainment", "video", "media"],
  "prefer_related_applications": false
}
